<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
 
  <parent>
    <groupId>com.tourapp.config</groupId>
    <artifactId>tourapp-config-web-reactor</artifactId>
    <version>0.8.0-SNAPSHOT</version>
  </parent>

  <artifactId>tourapp-config-web-jnlp</artifactId>
  <packaging>pom</packaging>
  <name>tourapp-tour-web-jnlp - Jnlp tour setup</name>
  <description>Jnlp file for tour components</description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo.webstart</groupId>
        <artifactId>webstart-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>jnlp-download-servlet</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <jnlpFiles>
            <jnlpFile>
              <templateFilename>tour.jnlp.vm</templateFilename>
              <outputFilename>tour.jnlp</outputFilename>
              <jarResources>
                <jarResource>
                  <groupId>com.tourapp.tour</groupId>
                  <artifactId>com.tourapp.tour.genled</artifactId>
                  <version>${project.version}</version>
                  <mainClass>com.tourapp.tour.genled.screen.detail.LinkTrxGridScreen</mainClass>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.tour</groupId>
                  <artifactId>com.tourapp.tour.acctrec</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.tour</groupId>
                  <artifactId>com.tourapp.tour.acctpay</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.tour</groupId>
                  <artifactId>com.tourapp.tour.assetdr</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.tour</groupId>
                  <artifactId>com.tourapp.tour.base</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.tour</groupId>
                  <artifactId>com.tourapp.tour.booking</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.tour</groupId>
                  <artifactId>com.tourapp.tour.payroll</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.tour</groupId>
                  <artifactId>com.tourapp.tour.product</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.tour</groupId>
                  <artifactId>com.tourapp.tour.profile</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.tour</groupId>
                  <artifactId>com.tourapp.tour.request</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.tour</groupId>
                  <artifactId>com.tourapp.tour.message</artifactId>
                  <version>${project.version}</version>
                </jarResource>
              </jarResources>
            </jnlpFile>
            <jnlpFile>
              <templateFilename>thintour.jnlp.vm</templateFilename>
              <outputFilename>thintour.jnlp</outputFilename>
              <jarResources>
                <jarResource>
                  <groupId>com.tourapp.thin.app</groupId>
                  <artifactId>com.tourapp.thin.app.booking</artifactId>
                  <version>${project.version}</version>
                  <mainClass>com.tourapp.thin.app.booking.BookingApplet</mainClass>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.thin.app</groupId>
                  <artifactId>com.tourapp.thin.app.request</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.thin</groupId>
                  <artifactId>com.tourapp.thin.tour.genled</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.thin</groupId>
                  <artifactId>com.tourapp.thin.tour.acctrec</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.thin</groupId>
                  <artifactId>com.tourapp.thin.tour.acctpay</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.thin</groupId>
                  <artifactId>com.tourapp.thin.tour.assetdr</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.thin</groupId>
                  <artifactId>com.tourapp.thin.tour.base</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.thin</groupId>
                  <artifactId>com.tourapp.thin.tour.booking</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.thin</groupId>
                  <artifactId>com.tourapp.thin.tour.payroll</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.thin</groupId>
                  <artifactId>com.tourapp.thin.tour.product</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.thin</groupId>
                  <artifactId>com.tourapp.thin.tour.profile</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.thin</groupId>
                  <artifactId>com.tourapp.thin.tour.request</artifactId>
                  <version>${project.version}</version>
                </jarResource>
              </jarResources>
            </jnlpFile>
            <jnlpFile>
              <templateFilename>resource.jnlp.vm</templateFilename>
              <outputFilename>resource.jnlp</outputFilename>
              <jarResources>
                <jarResource>
                  <groupId>com.tourapp.res</groupId>
                  <artifactId>com.tourapp.res.tour.app</artifactId>
                  <version>${project.version}</version>
                  <mainClass>com.tourapp.thin.app.booking.entry.App</mainClass>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.res</groupId>
                  <artifactId>com.tourapp.res.tour.genled</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.res</groupId>
                  <artifactId>com.tourapp.res.tour.acctrec</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.res</groupId>
                  <artifactId>com.tourapp.res.tour.acctpay</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.res</groupId>
                  <artifactId>com.tourapp.res.tour.assetdr</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.res</groupId>
                  <artifactId>com.tourapp.res.tour.base</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.res</groupId>
                  <artifactId>com.tourapp.res.tour.booking</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.res</groupId>
                  <artifactId>com.tourapp.res.tour.payroll</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.res</groupId>
                  <artifactId>com.tourapp.res.tour.product</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.res</groupId>
                  <artifactId>com.tourapp.res.tour.profile</artifactId>
                  <version>${project.version}</version>
                </jarResource>
                <jarResource>
                  <groupId>com.tourapp.res</groupId>
                  <artifactId>com.tourapp.res.tour.request</artifactId>
                  <version>${project.version}</version>
                </jarResource>
              </jarResources>
            </jnlpFile>
          </jnlpFiles>
          <pack200>true</pack200>
          <gzip>true</gzip>
          <outputDirectoryName>lib</outputDirectoryName>
          <excludeTransitive>true</excludeTransitive>
        </configuration>
      </plugin>
      
		<plugin>
		  <artifactId>maven-assembly-plugin</artifactId>
		  <version>2.2-beta-5</version>
		  <configuration>
		    <descriptors>
		      <descriptor>src/main/assembly/zip.xml</descriptor>
		    </descriptors>
		  </configuration>
		  <executions>
		    <execution>
		      <id>make-assembly</id> <!-- this is used for inheritance merges -->
		      <phase>package</phase> <!-- append to the packaging phase. -->
		      <goals>
		        <goal>single</goal> <!-- goals == mojos -->
		      </goals>
		    </execution>
		  </executions>
		</plugin>
    </plugins>
  </build>
  
</project>
