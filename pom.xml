<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
  	<groupId>org.jbundle.config</groupId>
  	<artifactId>jbundle-parent</artifactId>
    <version>1.0.5-SNAPSHOT</version>
    <relativePath>../jbundle/jbundle-parent</relativePath>
  </parent>

  <groupId>com.tourapp.config</groupId>
  <artifactId>tourapp-project-reactor</artifactId>
  <version>0.7.7</version>
  <packaging>pom</packaging>
  <name>tour-project-reactor - Top Level Project parent</name>
  <description>Parent project for all applications</description>

  <modules>
    <module>res</module>
    <module>thin</module>
    <module>tour</module>
    <module>config</module>
  </modules>

  <scm>
    <url>http://scm.jbundle.org/gitweb/scm/git/workspace/tourapp</url>
    <connection>scm:git:http://scm.jbundle.org/scm/git/workspace/tourapp</connection>
    <developerConnection>scm:git:ssh://scm.jbundle.org/scm/git/workspace/tourapp</developerConnection>
  </scm>

  <profiles>
    <profile> 
      <id>sonatype-oss-release</id>
      <properties>
        <OBRRepositoryIndex>tourapp-repository.xml</OBRRepositoryIndex>	<!-- Set to NONE if not used -->
	<releaseRepository>http://repository.jbundle.org:8081/nexus/content/repositories/releases</releaseRepository>
	<snapshotRepository>http://repository.jbundle.org:8081/nexus/content/repositories/snapshots</snapshotRepository>
	<publicRepository>http://repository.jbundle.org:8081/nexus/content/groups/public</publicRepository>
	<stagingRepository>http://repository.jbundle.org:8081/nexus/content/groups/public</stagingRepository>
	<publicReleaseRepository>http://repository.jbundle.org:8081/nexus/content/groups/public</publicReleaseRepository>
      </properties>
    </profile>
  </profiles>
  
</project>
